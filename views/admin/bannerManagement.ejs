        </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">banner</h5>
			  <div class="table-responsive">
               <table class="table table-striped">
                  <thead>
                    <tr>
                      <th scope="col">Banner Name</th>
                      <th scope="col">Image</th>
                     
                      <th scope="col">Title</th>
                      <th scope="col">Subtitle</th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                        <% banner.forEach(item => { %>
                        <tr>
                            <td class="text-capitalize"><%= item.bannerName %></td>
                            <td><img src="/uploads/<%= item.image %>" alt="<%= item.bannerName %>" style="width: 80px;height: 80px;"></td>
                            <td><%= item.title %></td>
                            <td><%= item.subtitle %></td>
                            <td>
                                <a href="/admin/banner/delete?id=<%= item._id %>" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                        <% }) %>
            </tbody>
                </table>
                <div class="align-items-center mt-2" id="pagination">
                  <nav aria-label="Page navigation example" style="width: 30%; margin: auto;">
                      <p class="text-center">Page <%= currentPage %> of <%= totalPages %></p>
                      <ul class="pagination justify-content-center">
                          <% if (currentPage > 1) { %>
                              <li class="page-item">
                                  <a class="page-link" href="?page=1">First</a>
                              </li>
                              <li class="page-item">
                                  <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                              </li>
                          <% } %>
                          <% if (currentPage < totalPages) { %>
                              <li class="page-item">
                                  <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                              </li>
                              <li class="page-item">
                                  <a class="page-link" href="?page=<%= totalPages %>">Last</a>
                              </li>
                          <% } %>
                      </ul>
                  </nav>
              </div>
              </div>
	  
	


